.v-control-panel
  padding: 16px
  font-family: sans-serif

  button
    box-sizing: border-box
    border: 1px solid #333
    margin: 4px 8px
    padding: 6px 14px

    color: black;
    background-color: #ccc
    border-radius: 4px

    font-weight: 600
    font-size: 14px

    &:hover
      background-color: #ddd

  .routes
    margin-bottom: 32px

  .route-wrapper
    border-bottom: 1px dotted #666

  .route
    display: flex
    padding: 10px 16px
    background-color: #fff
    transition: background-color .2s ease

    &:hover
      cursor: pointer
      background-color: #ccc
      transition: background-color .2s ease

    &.header
      background: #555
      color: white
      font-weight: 600

    button
      font-size: 10px
      padding: 4px 10px
      margin: -4px 0

    .name
      flex-shrink: 1
      flex-grow: 0
      display: inline-block
      width: 220px
      margin-right: 12px

    .method
      flex-shrink: 0
      flex-grow: 0
      display: inline-block
      width: 100px

    .path
      flex-shrink: 1
      flex-grow: 1
      display: inline-block
      width: 100px

    .mutators
      flex-shrink: 0
      flex-grow: 0
      display: inline-block
      width: 144px

  .response-delay
    margin-bottom: 32px

    .delay-range
      width: 220px

    .delay-ms
      width: 70px
      display: inline-block
      text-align: right

  .current
    textarea
      width: 100%
      height: 160px
      margin-top: 16px
      font-family: monospace
      font-size: 12px
